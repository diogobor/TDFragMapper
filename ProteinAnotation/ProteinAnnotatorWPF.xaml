<UserControl x:Class="ProteinAnnotation.ProteinAnnotatorWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProteinAnnotation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer x:Name="MyScrollBar" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="MyCanvas"
                AllowDrop="True"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="White"
                Width="4096" Height="2028" MouseDown="MyCanvas_MouseDown"></Canvas>
        </ScrollViewer>
    </Grid>

</UserControl>
